/*
 * Virall Nextflow configuration (tools-direct pipeline).
 * Set database paths or VIRALL_DATABASE_DIR for Kaiju/CheckV/VOG.
 */

params {
    samples           = "nextflow/samples.csv"
    config            = "configs/default_config.yaml"
    outdir            = "results"
    threads           = 8
    memory            = "16G"
    reference         = null
    rna_mode          = false
    assembly_strategy = "hybrid"
    min_contig_len    = 1000
    quality_phred     = 20
    min_read_len      = 50
    min_read_len_long = 1000
    kaiju_db          = null
    checkv_db         = null
    vog_db            = null
}

process {
    maxRetries   = 1
    errorStrategy = 'retry'
    withName: ASSEMBLE {
        time = '24 h'
        memory = 24.GB   // fixed so retries don't double; fits ~31 GB usable RAM
        cpus = params.threads
    }
    withName: PREPROCESS {
        time = '2 h'
        memory = '8 GB'
        cpus = params.threads
    }
    withName: KAIJU {
        time = '4 h'
        memory = '16 GB'
        cpus = params.threads
    }
    withName: VALIDATE {
        time = '2 h'
        memory = '8 GB'
        cpus = params.threads
    }
    withName: ANNOTATE {
        time = '2 h'
        memory = '8 GB'
        cpus = params.threads
    }
    withName: QUANTIFY {
        time = '2 h'
        memory = '8 GB'
        cpus = params.threads
    }
    withName: PLOT {
        time = '1 h'
        memory = '4 GB'
        cpus = 1
    }
}

profiles {
    local { executor = 'local' }

    // Docker: PREPROCESS runs locally (writes to host so outputs have content); ASSEMBLE and rest run in virall image.
    // PREPROCESS without container avoids Docker not persisting task outputs to host; staged files for ASSEMBLE then have content.
    docker {
        docker.enabled = true
        docker.runOptions = '--entrypoint ""'
        process.container = 'pavle17/virall'
        process.containerOptions = {
            def opts = "-v ${task.workDir}:${task.workDir} -v ${task.workDir.parent.parent}:${task.workDir.parent.parent} -v ${task.workDir.parent.parent.parent}:${task.workDir.parent.parent.parent}"
            if (env.HOME) opts += " -v ${env.HOME}:${env.HOME}"
            return opts
        }
        withName: PREPROCESS { container = null }
        params.kaiju_db = '/opt/virall/databases/kaiju_db'
        params.checkv_db = '/opt/virall/databases/checkv_db'
        params.vog_db = '/opt/virall/databases/vog_db'
    }

    // Singularity: same DB location /opt/virall/databases/ (image includes tools + DBs).
    // Bind work dir and $HOME so staged files and paths like ~/analysis, outdir resolve.
    singularity {
        singularity.enabled = true
        process.container = "${projectDir}/../virall.sif"
        process.containerOptions = {
            def opts = "-B ${task.workDir.parent.parent}:${task.workDir.parent.parent}"
            if (env.HOME) opts += " -B ${env.HOME}:${env.HOME}"
            return opts
        }
        withName: PREPROCESS { container = null }
        params.kaiju_db = '/opt/virall/databases/kaiju_db'
        params.checkv_db = '/opt/virall/databases/checkv_db'
        params.vog_db = '/opt/virall/databases/vog_db'
    }

    slurm {
        executor = 'slurm'
        queue = 'normal'
        clusterOptions = '-A your_account'
    }
    sge {
        executor = 'sge'
        queue = 'all.q'
    }
}
